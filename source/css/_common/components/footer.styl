.footer {
    text-align: center;
    background: #fff;
    font-size: 16px;

    &.fix {
        position: fixed;
        bottom: 0;
        width: 100%;
    }

    .footer-inner {
        width: 860px;
        margin: 0 auto;
        padding: 10px 0 10px;
        clearfix();
    }

    .copyright {
        font-size: 14px;
        color: #333;
    }
}
