.post {
    position: relative;

    .post-category {
        a {
            &:hover {
                text-decoration: underline;
            }

            &:after {
                content: ' > ';
            }

            &:last-of-type:after {
                display: none;
            }
        }
    }

    .post-head {
        text-align: center;

        h1 {
            font-weight: bold;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin-top: -20px;
        }

        .detail {
            font-family: Lato, 'PingFang SC', 'Microsoft YaHei', sans-serif;
            font-size: 12px;
            color: $gray-2;
        }
    }
}

.entry {
    margin: 20px;

    #write {
        padding: 60px 100px;
    }

    img {
        max-width: 100%;
        box-shadow: 1px 1px 1px #e6e6e6;
        border: 1px solid #f7f7f7;
    }

    h1, h2, h3, h4 {
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }
}