.post-item {
    cursor: pointer;
    border-bottom: 1px solid #fafafa;
    padding: 1rem 1.5rem;

    .post-title {
        font-size: 22px;
    }

    .post-title:hover {
        text-decoration: underline;
    }

    time {
        font-size: 12px;
        color: $gray-2;
    }

    &:hover {
        background: $white-1;
    }

    .more-info {
        color: $gray-2;
        font-size: 10px;
        margin-top: 10px;
    }
}
