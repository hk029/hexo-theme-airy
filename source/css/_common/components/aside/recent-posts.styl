.recent-posts {
    // padding-left: 10px;
    .post-list {
        padding-left: 10px;
        text-align: left;
        font-size: 14px;

        .post-list-item {
            margin-bottom: 10px;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;

            &:hover {
                text-decoration: underline;
            }

            &:before {
                content: "\f15c";
                font-weight: 900;
                font-family: 'Font Awesome 5 Free';
                margin-right: 5px;
                text-decoration: none;
                font-size: 0.8em;
                color: #aaa;
            }
        }
    }
}