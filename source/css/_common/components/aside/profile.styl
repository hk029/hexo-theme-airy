.profile {
    text-align: center;

    .avatar {
        width: 180px;
        height: 180px;
        margin: 0 auto;
        overflow: hidden;
        border: 1px solid #ddd;

        img {
            width: 100%;
            height: 100%;
            transition: all 1s;

            &:hover {
                transform: rotateY(180deg);
            }
        }

        &.round {
            border-radius: 50%;
        }
    }

    .author {
        padding: 10px;
        font-size: 14px;
        color: $black-2;
    }

    .introduce {
        padding: 10px;
        color: $gray-2;
        font-size: 14px;

        &::before {
            display: block;
            width: 2px;
            content: '\f10d';
            font-family: 'Font Awesome 5 Free';
            /* background: #f00; */
            font-weight: 900;
            margin-left: -15px;
        }

        &::after {
            display: block;
            width: 2px;
            content: '\f10e';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            float: right;
        }
    }

    .social {
        margin-top: 20px;

        &-item {
            color: $black-1;
            position: relative;

            .qrcode {
                position: absolute;
                top: 0;
                width: 100px;
                height: 200px;
            }
        }
    }
}