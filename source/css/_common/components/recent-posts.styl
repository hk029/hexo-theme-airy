.recent-post-item {
    cursor: pointer;
    border-bottom: 1px solid #fafafa;
    padding: 1rem 1.5rem;

    .post-title {
        font-size: 22px;
    }

    .post-title:hover {
        text-decoration: underline;
    }

    time {
        font-size: 12px;
        color: $gray-2;
    }

    &:hover {
        background: $white-2;
    }
}

.profile {
    text-align: center;
    .avatar {
        width: 180px;
        height: 180px;
        margin: 0 auto;
        overflow: hidden;
        &.round: {
            border-radius: 50%;
        }
    }
    
}