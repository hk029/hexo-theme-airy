// Header
// --------------------------------------------------
.site-meta {
  float: left;
  line-height: normal;

  +mobile() {
    margin-left: 10px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() {
      display: block;
    }
  }

  .logo {
    display: none;
  }

  .site-title {
    font-size: 46px;
    font-weight: bold;
    font-family: 'Paytone One', sans-serif;
    text-shadow: 2px 5px #929292;

    // font-family: 'Cinzel', serif;
    // font-family: 'Limelight', cursive;
    // font-family: 'Abril Fatface', cursive;
    // font-family: 'Orbitron', sans-serif;
    // font-family: 'Playfair Display SC', serif;
    // font-family: 'Berkshire Swash', cursive;
    // font-family: 'Almendra', serif;
    // font-family: 'Bungee Hairline', cursive;
    // font-family: 'Trochut', cursive;
    +mobile() {
      line-height: 34px;
    }
  }

  .custom-logo-image {
    height: 60px;
  }

  .site-subtitle {
    font-size: 13px;
    color: #eaeaea;
    float: right;
  }
}

.menu-inner {
  line-height: 78px;
  float: right;

  a {
    margin-right: 10px;
  }
}

.logo-line-before, .logo-line-after {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;

  +mobile() {
    display: none;
  }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;

    +mobile() {
      height: 3px;
    }
  }
}

.use-motion {
  .logo-line-before i {
    left: -100%;
  }

  .logo-line-after i {
    right: -100%;
  }
}