// Header
// --------------------------------------------------
.header { background: $white-3; }

.site-meta {
  float: left;
  line-height: normal;
  +mobile() {
    margin-left: 10px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 22px;
    font-weight: bolder;

    +mobile() { line-height: 34px; }
  }
  .custom-logo-image {
    height: 60px;
  }
  .site-subtitle {
    text-align: right;
    font-size: 13px;
    color: #999;
  }
}

.menu-inner {
    line-height: 78px;
    float: right;
    a {
        margin-right: 10px;
    }
}


.logo-line-before,
.logo-line-after {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;

  +mobile() { display: none; }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;
    +mobile() { height: 3px; }
  }
}

.use-motion {
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }
}