.inner {
    width: 960px;
    margin: 0 auto;
    padding: 25px 0 20px;
    clearfix();

    +mobile() {
        width: auto;
        margin-bottom: 50px;
        padding: 10px;
    }
}

.card {
    background: #fff;
    margin-bottom: 30px;
    transition: .5s;
    border: 0;
    border-radius: .1875rem;
    position: relative;
    width: 100%;
    box-shadow: none;
    padding: 20px;
    margin-bottom: 20px;

    .title {
        color: $gray-2;
        font-size: 12px;
        margin-bottom: 10px;
        font-weight: bold;
        /* text-decoration: underline; */
        /* border-bottom: 1px solid #ddd; */
        padding-bottom: 10px;
    }

    &:last-child {
        margin-bottom: 0;
    }
    .fix {
        fix();
    }
    &.nobkg {
        background: transparent;
    }
}

